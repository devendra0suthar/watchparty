{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npx tsc socket.ts --outDir . --esModuleInterop --skipLibCheck"
  },
  "deploy": {
    "startCommand": "node socket.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
